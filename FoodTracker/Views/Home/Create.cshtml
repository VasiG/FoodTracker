@model FoodTracker.Data.Measure

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Measure</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-1">
                <label asp-for="MeasureDate" class="control-label"></label>
                <input asp-for="MeasureDate" class="form-control" />
                <span asp-validation-for="MeasureDate" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="SugarLevelBefore" class="control-label"></label>
                <input asp-for="SugarLevelBefore" class="form-control" />
                <span asp-validation-for="SugarLevelBefore" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="SugarLevelAfter" class="control-label"></label>
                <input asp-for="SugarLevelAfter" class="form-control" />
            </div>
            <div class="form-group m-1">
                <label asp-for="MealType" class="control-label"></label>
                <select asp-for="MealType" class="form-control" asp-items="Html.GetEnumSelectList<FoodTracker.Data.MealType>()">
                    <option value="">-- Select Meal Type --</option>
                </select>
            </div>
            <div class="form-group m-1">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
            </div>
            <div class="form-group m-1">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div class="m-1">
    <a asp-action="Index" class="btn btn-light">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
